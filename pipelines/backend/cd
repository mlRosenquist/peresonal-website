node('docker') {
    def app

    stage('Clone repository') {
        checkout scm
    }

    stage('Build image') {
        dir('backend/src'){
            app = docker.build("mortenlyngosenquist/personal-website-backend")
        }
    }

    stage('Push image') {
        docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
        }
    }
}